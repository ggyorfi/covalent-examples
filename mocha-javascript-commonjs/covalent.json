{
    "runOnFly": true,
    "src": "{ROOT}/lib/**/*.+(js|coffee)",
    "spec": "{ROOT}/spec/**/*-spec.+(js|coffee)",
    "load": [
        "{ROOT}/spec/window.coffee"
    ],
    "env": {
        "__SOURCE__": "{ROOT}/lib/"
    },
    "compilers": {
        "coffeescript": {
            "src": "{ROOT}/**/*.coffee"
        },
        "babel": {
            "src": [
                "{ROOT}/lib/**/*.js",
                "{ROOT}/spec/**/*.js"
            ]
        }
    },
    "debug-example-1": true,
    "debug": {
        "logCompiledCode": false,
        "logErrors": true,
        "logFilters": false
    }
}
